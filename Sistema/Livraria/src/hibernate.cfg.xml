<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/livraria?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="modelo/TbCliente.hbm.xml"/>
    <mapping resource="modelo/TbEndereco.hbm.xml"/>
    <mapping resource="modelo/TbPessoa.hbm.xml"/>
    <mapping resource="modelo/Uf.hbm.xml"/>
    <mapping resource="modelo/RlItemVenda.hbm.xml"/>
    <mapping resource="modelo/TbLogin.hbm.xml"/>
    <mapping resource="modelo/TbFuncionario.hbm.xml"/>
    <mapping resource="modelo/Cidades.hbm.xml"/>
    <mapping resource="modelo/TbProduto.hbm.xml"/>
    <mapping resource="modelo/TbDepartamento.hbm.xml"/>
    <mapping resource="modelo/TbVenda.hbm.xml"/>
    <mapping resource="modelo/TbTipotelefone.hbm.xml"/>
    <mapping resource="modelo/Logradouros.hbm.xml"/>
    <mapping resource="modelo/TbTipofuncionario.hbm.xml"/>
    <mapping resource="modelo/TbTelefone.hbm.xml"/>
    <mapping resource="modelo/Bairros.hbm.xml"/>
    <mapping resource="modelo/TbTipocomplemento.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
